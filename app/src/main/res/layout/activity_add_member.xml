<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="姓名"
            android:textAppearance="@style/TextAppear.Theme.B19_Size15"/>

        <EditText
            android:id="@+id/et_realName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="请输入姓名"
            android:textAppearance="@style/TextAppear.Theme.B15_Size15"
            android:textColorHint="@color/B5"/>
    </LinearLayout>

    <include layout="@layout/line_e1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="手机号"
            android:textAppearance="@style/TextAppear.Theme.B19_Size15"/>

        <EditText
            android:id="@+id/et_mobile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="请输入手机号"
            android:textAppearance="@style/TextAppear.Theme.B15_Size15"
            android:textColorHint="@color/B5"/>
    </LinearLayout>

    <include layout="@layout/line_e1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="身份证号"
            android:textAppearance="@style/TextAppear.Theme.B19_Size15"/>

        <EditText
            android:id="@+id/et_idcard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="请输入身份证号"
            android:textAppearance="@style/TextAppear.Theme.B15_Size15"
            android:textColorHint="@color/B5"/>
    </LinearLayout>

    <include layout="@layout/line_e1"/>

    <LinearLayout
        android:id="@+id/lin_timetotime"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="有效期"
            android:textAppearance="@style/TextAppear.Theme.B19_Size15"/>

        <TextView
            android:id="@+id/tv_timetotime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/icon_dj"
            android:gravity="right|center_vertical"
            android:hint="请选择"
            android:textColorHint="@color/B5"
            android:textAppearance="@style/TextAppear.Theme.B15_Size15"
            />
        <!--B5_Size15 选择后B15_Size15 -->
    </LinearLayout>

    <include layout="@layout/line_e1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@color/white">


        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switch1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:checked="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="密码锁"
            android:textColor="@color/B19"
            android:textSize="15sp"
            />

    </LinearLayout>

    <include layout="@layout/line_e1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@color/white">

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switch2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:checked="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="IC卡开锁"
            android:textColor="@color/B19"
            android:textSize="15sp"
            />

    </LinearLayout>

    <include layout="@layout/line_e1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@color/white">

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switch3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:checked="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="指纹开锁"
            android:textColor="@color/B19"
            android:textSize="15sp"
            />
    </LinearLayout>

    <include layout="@layout/line_e1"/>

    <LinearLayout
        android:id="@+id/lin_frequency"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="认证频度"
            android:textAppearance="@style/TextAppear.Theme.B19_Size15"/>

        <TextView
            android:id="@+id/tv_frequency"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/icon_dj"
            android:gravity="right|center_vertical"
            android:hint="请选择"
            android:textColorHint="@color/B5"
            android:textAppearance="@style/TextAppear.Theme.B15_Size15"
            />
        <!--B5_Size15 选择后B15_Size15 -->
    </LinearLayout>
</LinearLayout>
