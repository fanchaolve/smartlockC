<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/B7"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:background="@drawable/shape_open_lock_person1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/tv_timetotime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text=""
                android:textAppearance="@style/TextAppear.Theme.B14_Size12"/>

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textAppearance="@style/TextAppear.Theme.B14_Size12"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:background="@drawable/shape_locker"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:text=""
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textAppearance="@style/TextAppear.Theme.B2_Size13"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/rl"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_idcard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textAppearance="@style/TextAppear.Theme.B19_Size13"/>

                <TextView
                    android:id="@+id/tv_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text=""
                    android:textAppearance="@style/TextAppear.Theme.B19_Size13"/>

            </LinearLayout>

        </RelativeLayout>

        <include layout="@layout/line_e"/>

        <LinearLayout
            android:id="@+id/lin_A"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:background="@drawable/shape_open_lock_person"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_stop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:paddingLeft="15dp"
                android:text="@string/stop_use"
                android:textAppearance="@style/TextAppear.Theme.B21_Size15"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="15dp"
                android:background="@color/B8"/>

            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/edit"
                android:textAppearance="@style/TextAppear.Theme.B27_Size15"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="15dp"
                android:background="@color/B8"/>

            <TextView
                android:id="@+id/tv_story1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:paddingRight="15dp"
                android:text="@string/use_record"
                android:textAppearance="@style/TextAppear.Theme.B27_Size15"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_B"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:background="@drawable/shape_open_lock_person"
            android:gravity="center_vertical"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/tv_use"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/use"
                android:textAppearance="@style/TextAppear.Theme.B27_Size15"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="15dp"
                android:background="@color/B8"/>

            <TextView
                android:id="@+id/tv_story2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingRight="15dp"
                android:text="@string/use_record"
                android:textAppearance="@style/TextAppear.Theme.B27_Size15"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>